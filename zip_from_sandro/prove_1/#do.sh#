#!/bin/bash

# Remove old stuff 
rm \#*

# Create gro and top
pdb2gmx -f 1L2Y.pdb -o 1l2y.gro -p 1l2y.top -ignh <<EOF
8
6
EOF

# preprocess
#editconf -bt cubic -f 1l2y.gro -o 1l2y_box.gro -c -d 1.0  
grompp -f mini_1.mdp -c 1l2y.gro -p 1l2y.top  -o 1l2y_1.tpr
mdrun -s 1l2y_1.tpr -x minitraj_1.xtc -c 1l2y_gromacs.pdb 

# Creat new gro
pdb2gmx -f 1l2y_gromacs.pdb -o 1l2y_gromacs.gro -p 1l2y.top <<EOF
8
6
EOF

# Create index file
make_ndx -f 1l2y_gromacs.gro -o 1l2y_index.ndx <<EOF
a 8
a 15
q
EOF
grompp -f mini.mdp -c 1l2y_gromacs.gro -p 1l2y.top -n 1l2y_index.ndx -o 1l2y.tpr
mdrun -s 1l2y.tpr -x minitraj_2.xtc -c 1l2y_gromacs.pdb -e 1l2y_energy.edr

#grep -A 4 "Energies (kJ/mol)" ${dir}/md.log > ${dir}/gromacs_ene.dat
